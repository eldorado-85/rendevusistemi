@model rendevusistemi.Database.Data.Emploies

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="bg-dark">
    <div class="container">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header">Kişi Kaydet</div>
            <div class="card-body">
            @using (@Html.BeginForm())
            {
                    @*Ad soyad*@
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                @*<label for="exampleInputName" style="visibility:hidden">Adı</label>*@
                              
                                @Html.TextBoxFor(model => model.Firstname, new { @class = "form-control", @id = "exampleInputLastName", @type = "text", @placeholder = "Adı" })


                            </div>
                            <div class="col-md-6">
                                @*<label for="exampleInputLastName" style="visibility:hidden">Soyadı</label>*@
                       
                                @Html.TextBoxFor(model => model.Firstname, new { @class = "form-control", @id = "exampleInputLastName", @type = "text", @placeholder = "Soyadı" })


                            </div>

                        </div>
                    </div>
                    @*TC kimllik Numarası*@
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-8">
                                @*<label for="exampleInputEmail1">Email adresi</label>*@
                                <input class="form-control" id="tcNo" type="text" placeholder="TC Numarası">
                                @Html.TextBoxFor(model => model.Firstname, new { @class = "form-control", @id = "exampleInputLastName", @type = "text", @placeholder = "Soyadı" })
                            </div>
                            <div class="col-md-4">
                                <input class="form-control" id="exampleInputLastName" type="text" aria-describedby="nameHelp" placeholder="Sıra numarası">
                                @Html.TextBoxFor(model => model.Firstname, new { @class = "form-control", @id = "exampleInputLastName", @type = "text", @placeholder = "Soyadı" })
                            </div>
                        </div>
                    </div>
                    @*Adres*@
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12">
                                @*<label for="exampleInputPassword1">Şifre</label>*@
                                <input class="form-control" id="exampleInputPassword1" type="password" placeholder="Adres">
                                @Html.TextBoxFor(model => model.Firstname, new { @class = "form-control", @id = "exampleInputLastName", @type = "text", @placeholder = "Soyadı" })
                            </div>
                           
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-3">
                                <label class="form-control" for="kayitTarihi">Kayıt Tarihi</label>

                            </div>
                            <div class="col-md-3">
                                <input class="form-control" id="kayitTarihi" type="date" aria-describedby="nameHelp" placeholder="Kayıt Tarihi">
                            </div>
                            
                        </div>
                    </div>
                    <a class="btn btn-primary btn-block" href=""> KAYDET </a>

            }
                <div class="text-center">
                    <a class="d-block small mt-3" href="index.cshtml">Ana Sayfa</a>
                    @*<a class="d-block small" href="forgot-password.html">Forgot Password?</a>*@
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin Java1Script-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
</body>

