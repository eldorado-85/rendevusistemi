@model rendevusistemi.Database.Data.Emploies

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<body class="bg-dark">
    <div class="container">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header">Kişi Kaydet</div>
            <div class="card-body">
             @using(@Html.BeginForm() )
             {
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="exampleInputName">Adı</label>
                                @*<input class="form-control" id="exampleInputName"   type="text" aria-describedby="nameHelp" placeholder=" Adınızı giriniz.">*@
                                @Html.TextBoxFor(model => model.Firstname, new { @class = "form-control" ,@id = "exampleInputLastName", @type = "text" , @placeholder = "Ad" })
                            </div>
                            <div class="col-md-6">
                                <label for="exampleInputLastName">Soyadı</label>
                                @Html.TextBoxFor(model => model.Lastname, new { @class = "form-control", @id = "exampleInputLastName", @type = "text", @placeholder = "Soyad" })
                              
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1"> Adres</label>
                        @*<input class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" placeholder="email adresini giriniz">*@
                        @Html.TextBoxFor(model => model.Adress, new { @class = "form-control", @id = "exampleInputAdress", @type = "Adress", @placeholder = " adres giriniz" })
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="exampleInputPassword1">Telefon No</label>
                                @*<input class="form-control" id="exampleInputPassword1" type="password" placeholder="şifrenizi giriniz">*@
                                @Html.TextBoxFor(model => model.Number, new { @class = "form-control", @id = "exampleInputAdress", @type = "text" ,@placeholder = "telefon no  giriniz" })
                            </div>
                            
                        </div>
                    </div>
                    <input type="submit" value="KAYDET" class="btn btn-primary btn-block" />
               
                        
                 


             }
                <div class="text-center">
                    <a class="d-block small mt-3" href="@Url.Action("index")>Ana Sayfa</a>
                  
                </div>
            </div>
        </div>
        
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin Java1Script-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
</body>

