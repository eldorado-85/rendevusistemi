@model rendevusistemi.Database.Data.Emploies

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<body class="bg-dark">
    <div class="container">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header">Kişi Kaydet</div>
            <div class="card-body">
                <form >
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="exampleInputName">Adı</label>
                                <input class="form-control" id="exampleInputName" type="text" aria-describedby="nameHelp" placeholder=" Adınızı giriniz.">
                            </div>
                            <div class="col-md-6">
                                <label for="exampleInputLastName">Soyadı</label>
                                <input class="form-control" id="exampleInputLastName" type="text" aria-describedby="nameHelp" placeholder="Soyad">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email adresi</label>
                        <input class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" placeholder="email adresini giriniz">
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="exampleInputPassword1">Şifre</label>
                                <input class="form-control" id="exampleInputPassword1" type="password" placeholder="şifrenizi giriniz">
                            </div>
                            <div class="col-md-6">
                                <label for="exampleConfirmPassword">Şifre Tekrar</label>
                                <input class="form-control" id="exampleConfirmPassword" type="password" placeholder="şifrenizi tekrar giriniz">
                            </div>
                        </div>
                    </div>
                    <a class="btn btn-primary btn-block" href="@Html.Action("register")"> KAYDET </a>

                </form>
                <div class="text-center">
                    <a class="d-block small mt-3" href="index.cshtml">Ana Sayfa</a>
                    @*<a class="d-block small" href="forgot-password.html">Forgot Password?</a>*@
                </div>
            </div>
        </div>
        
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin Java1Script-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
</body>

