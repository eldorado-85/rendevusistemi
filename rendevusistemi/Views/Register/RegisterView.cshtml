@model IEnumerable<rendevusistemi.Database.Data.Emploies>


       
       
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>

<div class="container">
  <h2>Filterable Table</h2>
  <p>Type something in the input field to search the table for first names, last names or emails:</p>  
  <input class="form-control" id="myInput" type="text" placeholder="Search..">
  <br>
  <table class="table table-bordered table-striped">
      <thead>
          <tr>
              <th>İsim</th>
              <th>Soyisim</th>
              <th>Adres</th>
              <th>Telefon</th>
              <th>Açıklama</th>
              <th>Onay</th>


          </tr>
      </thead>
      <tfoot>
          <tr>
              <th>İsim</th>
              <th>Soyisim</th>
              <th>Adres</th>
              <th>Telefon</th>
              <th>Açıklama</th>
              <th>Onay</th>

          </tr>
      </tfoot>

      @foreach (var item in Model)
      {
          <tr>
              <td>
                  @Html.DisplayFor(modelItem => item.Firstname)
                  @Html.ValidationMessageFor(modelItem => item.Firstname)

              </td>
              <td>
                  @Html.DisplayFor(modelItem => item.Lastname)
              </td>
              <td>
                  @Html.DisplayFor(modelItem => item.Adress)
              </td>
              <td>
                  @Html.DisplayFor(modelItem => item.Phone)
                  @Html.ValidationMessageFor(modelItem => item.Phone)
              </td>
              <td>
                  @Html.DisplayFor(modelItem => item.Description)
                  @Html.ValidationMessageFor(modelItem => item.Description)
              </td>
              <td>
                  @Html.DisplayFor(modelItem => item.IsOk)
                  @Html.ValidationMessageFor(modelItem => item.IsOk)
              </td>

              <td>
                  <i class="fa fa-fw fa-edit" style="font-size:15px"></i>
                  @Html.ActionLink("Düzenle", "RegisterEdit", new { id = item.Id }) |
                  @*<i class="fa fa-fw fa-address-card-o" style="font-size:15px"></i>
                    @Html.ActionLink("Detay", "Details", new { id = item.Id }) |*@
                  <i class="fa fa-fw fa-close" style="font-size:15px;color:red"></i>
                  @Html.ActionLink("Sil", "RegisterDel", new { id = item.Id })
              </td>
          </tr>
      }
  </table>
  
 

    <script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
    </script>


