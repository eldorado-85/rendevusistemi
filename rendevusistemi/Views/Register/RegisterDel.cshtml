@model rendevusistemi.Database.Data.Emploies


@{
    ViewBag.Title = "RegisterDel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <div class="container-fluid">
        <h4>Silmek İstediğinizden Emin Misiniz?</h4>
        <div>
          
        
            <dl class="dl-horizontal">
                <hr />
              


                <dd>
                    @Html.DisplayFor(model => model.Firstname)
                </dd>
                <hr />
              
                <dd>
                    @Html.DisplayFor(model => model.Lastname)
                </dd>

                <hr />

                <dd>
                    @Html.DisplayFor(model => model.Adress)
                </dd>
                <hr />
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="SİL" class="btn btn-danger" /> |
                    @Html.ActionLink("Geri Dön", "RegisterView")
                </div>
            }
        </div>
    </div>
</div>
