@model IEnumerable<rendevusistemi.Database.Data.Appointments>



<div class="content-wrapper">
    <div class="container-fluid">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Kayıt Edilen Operasyonlar</a>
            </li>
            @*<li class="breadcrumb-item active">@Html.ActionLink("Yeni Oluştur", "Job")</li>*@
        </ol>
        <h2></h2>

        <p>

        </p>

        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-table"></i> Randevu Listesi
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="dataTable" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Müşteri</th>
                                <th>Operasyon</th>
                                <th>Açıklama</th>
                                <th>Tarih-Saat</th>

                            </tr>
                        </thead>


                        <tfoot>
                            <tr>
                                <th>Müşteri</th>
                                <th>Operasyon</th>
                                <th>Açıklama</th>
                                <th>Tarih-Saat</th>

                            </tr>
                        </tfoot>


                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.EmployeId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.JobId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateTimeStart)
                                </td>



                                <td>
                                    <i class="fa fa-fw fa-edit" style="font-size:15px"></i>
                                    @Html.ActionLink("Düzenle", "AppointmentEdit", new { id = item.Id }) |

                                    <i class="fa fa-fw fa-close" style="font-size:15px;color:red"></i>
                                    @Html.ActionLink("Sil", "AppointmentDel", new { id = item.Id })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>

        </div>


    </div>
</div>


<a class="scroll-to-top rounded" href="#page-top">
    <i class="fa fa-angle-up"></i>
</a>
