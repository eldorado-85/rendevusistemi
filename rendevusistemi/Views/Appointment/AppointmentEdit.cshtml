@model rendevusistemi.Database.Data.Appointments


@{
    ViewBag.Title = "AppointmentEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <div class="container-fluid">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Kayıt Düzenleme</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">

                    <div class="col-md-10">
                        @Html.Label("MÜŞTERİ")
                        @Html.EditorFor(model => model.EmployeId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EmployeId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-md-10">
                        @Html.Label("OPERASYON")
                        @Html.EditorFor(model => model.JobId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.JobId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-md-10">
                        @Html.Label("AÇIKLAMA")
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-md-10">
                        @Html.Label("TARİH-SAAT")

                        @*@Html.EditorFor(model => model.DateTimeStart, new { htmlAttributes = new { @class = "datepicker", @Value = Model.DateTimeStart.ToString("yyyy/MM/dd") } })*@


                        @Html.EditorFor(model => model.DateTimeStart, new { htmlAttributes = new { @class = "form-control oso", @type = "date", @Value = Model.DateTimeStart.ToString("yyyy/MM/dd") } })
                        @Html.ValidationMessageFor(model => model.DateTimeStart, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="KAYDET" class="btn btn-info" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Listeye Dön", "AppointmentView")
        </div>
    </div>
</div>
